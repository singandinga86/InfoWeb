@{
    ViewData["Title"] = "Consulta de Clientes";
    @model IEnumerable<Clients.Models.Clientes>
}


<div>
    <a class="btn btn-success pull-left" asp-controller="Home" asp-action="Create">Nuevo</a> 
    <div class="pull-right">
        <form method="get" asp-controller="Home" asp-action="Index" class="form-inline">
            <input name="searchCriteria" class="form-control" id="searchCriteria" value="@ViewBag.SearchCriteria"/>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </div>
</div>

<table class="table table-responsive table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Identificador</th>
            <th>Telefono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">
                    No Existen datos para mostrar
                </td>
            </tr>
        }
        else
        {
            foreach (Clients.Models.Clientes client in Model)
            {
            <tr>
                <td>@client.NombreCompleto</td>
                <td>@client.Identificacion</td>
                <td>@client.Telefono</td>
                <td>
                    <a href="javascript:void(0)" class="edit-link" name="@("item" + client.Id)"><span class="glyphicon glyphicon-edit"></span></a>
                    <a href="#" class="remove-link"
                       onclick="removeClicked('@client.Id','@client.NombreCompleto');">
                        <span class="glyphicon glyphicon-trash">
                        </span>
                    </a>
                </td>
            </tr>
            }
        }
    </tbody>

</table>

<div id="removeClientModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <input type="hidden" id="clientId" />
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Eliminar Cliente</h4>
            </div>
            <div class="modal-body">
                <p>Está seguro que desea eliminar al cliente: <strong id="clientName"></strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="modalRemoveButton">Aceptar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script type="text/javascript">

        function removeClicked(clientId, client) {
            var clientIdControl = $("#clientId");
            clientIdControl.val(clientId);
            var clientName = $("#clientName");
            clientName.text(client);
            var modal = $("#removeClientModal");
            modal.modal()
        }

        var setItemUrl = function (nativeDOMItem, actionName)
        {
            var jQueryItem = $(nativeDOMItem);
            var itemName = jQueryItem.attr('name');
            itemId = itemName.replace("item", "");
            var targetUrl = "/Home/"+ actionName + "/" + itemId;
            jQueryItem.attr('href', targetUrl);
        }


        $(function () {
            $editItems = $(".edit-link");
            $editItems.each(function (index) {
                setItemUrl(this, "Update");
            });

            var modalRemoveButton = $("#modalRemoveButton");
            var clientIdContainer = $("#clientId");
            modalRemoveButton.on('click', function (event) {
                var clientId = clientIdContainer.val();
                console.log(clientId);
                $.ajax({
                    method: 'DELETE',
                    url: 'Home/Delete/' + clientId
                }).then(function (response) {
                    window.location.reload(true);
                    },
                  function (error) { });
            });

            $flashMessage = $(".alert.alert-success.alert-dismissible");
            setTimeout(function () {
                $flashMessage.fadeOut();
            },2000);

        });
    </script>
}


